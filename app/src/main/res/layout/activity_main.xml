<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rte_bien_001">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ProgressBar
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scanbar"
            android:scrollbarSize="100dp"
            android:indeterminate="false"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/goodbye"
            android:layout_alignEnd="@+id/goodbye" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="177dp"
            android:id="@+id/connexion_text"
            tools:text="@string/connexion" />

        <TextView
            android:text="@string/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goodbye"
            android:textSize="23sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_alignBottom="@+id/connexion_text"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="63dp" />

    </RelativeLayout>
</RelativeLayout>
